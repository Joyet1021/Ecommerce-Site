				<li><a href="/admin/adminhome">Home</a></li>
				<li class="divider">/</li>
				<li><a href="#" class="active">Users List</a></li>
			</ul>
            <div class="productsfull">
                <div class="productform">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>User id</th>
                                <th>Order id</th>
                                <th>Order date</th>
                                <th>Order Status</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach((order) => { %>
                                <tr class="row<%= order._id %>">
                                    <td data-userid="<%= order.userid %>"><%= order.userid %></td>
                                    <td><%= order._id %></td>
                                    <% const date = order.orderdate.toISOString().substring(0, 10) %>
                                    <td><%= date %></td>
                                    
                                    <td>
                                        <%if(order.status == "Cancelled"){%>
                                            <button type="button" id="select-button<%= order._id %>" class="select-button" ><%= order.status %></button>

                                            <%} else {%>

                                        <!-- New td with button for selecting order status -->
                                        <button type="button" id="select-button<%= order._id %>" class="select-button" onclick="showRadioButtons('<%= order._id %>')"><%= order.status %></button>

                                        <!-- Container for radio buttons (initially hidden) -->
                                        <div id="radioButtons<%= order._id %>" style="display: none;">
                                            <input type="radio" id="Confirmed<%= order._id %>" name="orderStatus<%= order._id %>" value="Confirmed" >
                                            <label for="Confirmed<%= order._id %>" onclick="selectRadioButton('Confirmed<%= order._id %>')">Confirmed</label>

                                            <br>
                                            <input type="radio" id="Shipped<%= order._id %>" name="orderStatus<%= order._id %>" value="Shipped">
                                            <label for="shipped<%= order._id %>" onclick="selectRadioButton('Shipped<%= order._id %>')">Shipped</label>
                                            <br>
                                            <input type="radio" id="Delivered<%= order._id %>" name="orderStatus<%= order._id %>" value="Delivered">
                                            <label for="delivered<%= order._id %>" onclick="selectRadioButton('Delivered<%= order._id %>')">Delivered</label>
                                        </div>
                                        <%}%>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

            </div>
        </form>
		</main>
		<!-- MAIN -->
	</section>
	
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

       
    <script>
        function showRadioButtons(orderId) {
            const radioButtons = document.getElementById(`radioButtons${orderId}`);
            if (radioButtons.style.display === "none") {
                radioButtons.style.display = "block";
            } else {
                radioButtons.style.display = "none";
            }
        }


        document.querySelectorAll('[name^="orderStatus"]').forEach(radioButton => {
            radioButton.addEventListener('click', function() {
                const orderId = this.name.replace('orderStatus', '');
                const userId = this.closest('tr').querySelector('td').dataset.userid;
                const selectedValue = document.querySelector(`[name="orderStatus${orderId}"]:checked`).value;
                document.getElementById(`select-button${orderId}`).innerHTML = selectedValue;
                showRadioButtons(orderId); // Hide the radio buttons after selecting an option

                fetch(`/admin/orderstatus?orderId=${orderId}&userId=${userId}&status=${selectedValue}`, {
                    method: 'GET'
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log(data); // Handle response data as needed
                })
                .catch(error => {
                    console.error('There was a problem with your fetch operation:', error);
                });
            });
        });


        function selectRadioButton(radioButtonId) {
    const radioButton = document.getElementById(radioButtonId);
    radioButton.checked = true;
    radioButton.dispatchEvent(new Event('click')); // Trigger click event to update UI
}


    


    </script>
    




