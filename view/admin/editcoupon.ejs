		<main>
            <h1 class="title" style="padding-left: 10px;">Edit Coupon</h1>
			<ul class="breadcrumbs"style="padding-left: 10px;">
				<li><a href="/admin/adminhome">Home</a></li>
				<li class="divider">/</li>
				<li><a href="/admin/couponlist" > Couponlist</a></li>
				<li class="divider">/</li>
				<li><a href="" class="active"> Edit Coupon</a></li>
			</ul>
			<form action="/admin/editCouponPost?id=<%=couponDetails.id%>" method="post">
				<div class="data2" >
					<div class="content-data2" >
						<label for="categoryName" style="font-weight: bold; font-size: larger;padding-bottom: 20px; padding-left: 35%;">Edit Coupon</label ><br><br>
							<!-- Display success messages -->

	
							<div class="category" style="font-weight: bold;margin-left: 15%;">Coupon Code</div>
							<input type="text" id="couponCode" name="couponCode" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" required value="<%= couponDetails.couponCode%>" ><br><br>

							<div class="category" style="font-weight: bold;margin-left: 15%;">Minimum Purchase</div>
							<input type="number" id="minimumPurchase" name="minimumPurchase" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;"  required value="<%= couponDetails.minimumPurchase%>"><br><br>

							<div class="category" style="font-weight: bold;margin-left: 15%;">Discount Percentage</div>
							<input type="number" id="discountPercentage" name="discountPercentage" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" min="0" max="100" required value="<%= couponDetails.discountPercentage%>"><br><br>

							<div class="subCategory" style="font-weight: bold;margin-left: 15%;">Start Date</div>
							<input type="date" id="startDate" name="startDate"  oninput="formatDateInput(this)" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" required value="<%= couponDetails.startDate.toISOString().substring(0, 10)%>"><br><br>

							<div class="subCategory" style="font-weight: bold;margin-left: 15%;">Expiry Date</div>
							<input type="date" id="endDate" name="endDate" oninput="formatDateInput(this)" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" required value="<%= couponDetails.endDate.toISOString().substring(0, 10)%>"><br><br>
                            <div class="message" style="color: rgb(183, 21, 21);margin-bottom: 10px; font-weight: bold;"></div>
							<button class="submit" style="height: 7%; width: 50%; display: flex; align-items: center; justify-content: center;margin-left: 25%;" >Submit</button>
						</div>
						<div style="width: 50%;"></div>
						
						
				
			</form>
			
			
		
			
		</main>
		<!-- MAIN -->
	</section>
	
	
	<script>
		
		function formatDateInput(input) {
			const dateValue = input.value;
			const formattedDate = moment(dateValue).format('YYYY-MM-DD');
			input.value = formattedDate;
		}
	</script>


	
