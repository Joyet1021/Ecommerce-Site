				<li class="divider">/</li>
				<li><a href="" class="active"> Add Banner</a></li>
			</ul>
			<form class="banner" id="add_banner" enctype="multipart/form-data">
				<div class="data3" >
					<div class="content-data3" >
						<label for="categoryName" style="font-weight: bold; font-size: larger;padding-bottom: 20px; padding-left: 35%;">Add Banner</label ><br><br>
							<!-- Display success messages -->
                            <div class="imagefull1">
                                
                                <div class="profileimgbox1">
                                    <img  src="/uploads" alt="submit" name="image" id="imagePreview" class="bannerimage" width="100%" height="100%"  >
                                    
                                    
                                </div>
                                <div class="choose1">
                                    <div class="choose1inner1">
                                       
                                        <input type="file"  name="bannerImage" onchange="previewImage(this)" id="banner_image" class="bannerImageADD">
                                    </div>
                                </div>
                            </div><br>

	
							<div class="bannerName" style="font-weight: bold;margin-left: 15%;">Banner Name</div>
							<input type="text" id="bannerName" name="bannerName" style="margin-left: 15%;width: 70%; height: 5%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" placeholder="Enter Banner Name" required ><br><br>

							<div class="bannerHeading" style="font-weight: bold;margin-left: 15%;"><label for="description">Banner Heading</label><br>
                            <textarea name="bannerHeading" id="bannerHeading" style="width: 82%; height: 3%; border: 2px solid black; border-radius: 5px; padding-left: 5px;"  required></textarea></div>

							<div class="offerPrice" style="font-weight: bold;margin-left: 15%;">Offer Price</div>
							<input type="number" id="offerPrice" name="offerPrice" style="margin-left: 15%;width: 70%; height: 5%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" placeholder="Enter Price" min="0" max="1000" required><br><br>

							<div class="startDate" style="font-weight: bold;margin-left: 15%;">Start Date</div>
							<input type="date" id="startDate" name="startDate" oninput="formatDateInput(this)" style="margin-left: 15%;width: 70%; height: 5%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" required><br><br>

							<div class="endDate" style="font-weight: bold;margin-left: 15%;">Expiry Date</div>
							<input type="date" id="endDate" name="endDate" oninput="formatDateInput(this)" style="margin-left: 15%;width: 70%; height: 5%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" required><br><br>
							<div class="message" style="color: rgb(183, 21, 21);margin-bottom: 10px;margin-left: 15%; font-weight: bold;"></div>
							<button type="button" class="submit" style="height: 5%; width: 50%; display: flex; align-items: center; justify-content: center;margin-left: 25%;" >Add</button>
						</div>
						<div style="width: 50%;"></div>
						
						
				
