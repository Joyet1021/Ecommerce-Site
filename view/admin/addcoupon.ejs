			<div class="profile" style="cursor:pointer;" onclick="window.location.href='/user/logout'">
				<span class="material-symbols-outlined">
                    move_item
                    </span>
			</div>
		</nav>
		
		<main>
            <h1 class="title" style="padding-left: 10px;">Add Coupon</h1>
			<ul class="breadcrumbs"style="padding-left: 10px;">
				<li><a href="/admin/adminhome">Home</a></li>
				<li class="divider">/</li>
				<li><a href="/admin/couponlist" > Couponlist</a></li>
				<li class="divider">/</li>
				<li><a href="" class="active"> Add Coupon</a></li>
			</ul>
			<form class="coupon" id="add_coupon">
				<div class="data2" >
					<div class="content-data2" >
						<label for="categoryName" style="font-weight: bold; font-size: larger;padding-bottom: 20px; padding-left: 35%;">Add Coupon</label ><br><br>
							<!-- Display success messages -->

	
							<div class="category" style="font-weight: bold;margin-left: 15%;">Coupon Code</div>
							<input type="text" id="couponCode" name="couponCode" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" placeholder="Enter code" required ><br><br>

							<div class="category" style="font-weight: bold;margin-left: 15%;">Minimum Purchase</div>
							<input type="number" id="minimumPurchase" name="minimumPurchase" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" placeholder="*** Above" required><br><br>

							<div class="category" style="font-weight: bold;margin-left: 15%;">Discount Percentage</div>
							<input type="number" id="discountPercentage" name="discountPercentage" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" placeholder="Enter Percentage" min="0" max="1000" required><br><br>

							<div class="subCategory" style="font-weight: bold;margin-left: 15%;">Start Date</div>
							<input type="date" id="startDate" name="startDate" oninput="formatDateInput(this)" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" required><br><br>

							<div class="subCategory" style="font-weight: bold;margin-left: 15%;">Expiry Date</div>
							<input type="date" id="endDate" name="endDate" oninput="formatDateInput(this)" style="margin-left: 15%;width: 70%; height: 7%; border: 2px solid black; border-radius: 5px; padding-left: 5px;" required><br><br>
							<div class="message" style="color: rgb(183, 21, 21);margin-bottom: 10px;margin-left: 15%; font-weight: bold;"></div>
							<button type="button" class="submit" style="height: 7%; width: 50%; display: flex; align-items: center; justify-content: center;margin-left: 25%;" >Add</button>
						</div>
						<div style="width: 50%;"></div>
						
						
				
			</form>
			
			
		
			
		</main>
		<!-- MAIN -->
	</section>
	<script src="/js/addcoupon.js"></script>
	
	<script>
		
		function formatDateInput(input) {
			const dateValue = input.value;
			const formattedDate = moment(dateValue).format('YYYY-MM-DD');
			
			input.value = formattedDate;
		}
	</script>


	<script src="/js/script.js"></script>
